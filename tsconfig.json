{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "esnext.asynciterable"]
  },
  "include": ["src/**/*", "generated/prisma", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
